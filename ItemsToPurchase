#include <iostream>
#include "ItemToPurchase.h"
#include <iomanip>
#include <string>
using namespace std;

    string name = "";
    int quantity = 0;
    double cost = 0;
    string description = "";

ItemToPurchase::ItemToPurchase(){  
}


//setters for basic elements
//backwards
void ItemToPurchase::SetName(string& itemName){
    name = itemName;
}

void ItemToPurchase::SetCost(double itemCost){
    cost = itemCost;
}

void ItemToPurchase::SetQuantity(int itemQuantity){
    quantity = itemQuantity;
}
//added in step 1 of instructions
void ItemToPurchase::SetItemDescription(string& itemDescription){
    description = itemDescription;
}

//getters for basic elements
string ItemToPurchase::GetName(string name){
    return name;
}
int ItemToPurchase::GetQuantity(int quantity){
    return quantity;
}
double ItemToPurchase::GetCost(double cost){
    return cost;
}

//print functions requested in the instructions

/*not sure what the format zybooks will want these to print in because it is very picky; 
however, these are just filling in and can adjust later*/

void ItemToPurchase::PrintItemCost(double itemCost){
    cout << "Here is the cost: " << itemCost << endl;
}

void ItemToPurchase::PrintItemCost(int itemQuantity){
    cout << "Here is the quantity: " << itemQuantity << endl;
}

void PrintItemDescription(string& description){
    cout << "Description of the item: " << description << endl;
}
